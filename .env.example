# 🎭 CONFIGURACIÓN DEL CARNAVALITO SUPREMO

# 🌐 SERVIDOR
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# 🔧 CONFIGURACIÓN DE PROXY Y SSL
TRUST_PROXY=false
USE_HTTPS=false

# 🎤 CONFIGURACIÓN DE VOZ GOOGLE
GOOGLE_CLOUD_PROJECT=tu-proyecto-google
GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json

# 🎭 CONFIGURACIÓN DEL CARNAVAL
DICCIONARIO_GADITANO_SIZE=50
EFECTOS_VISUALES=true
MODO_CARNAVAL=true
VOZ_POR_DEFECTO=Jorge

# 🎪 CONFIGURACIÓN DE CHAT
MAX_MENSAJE_LENGTH=500
RATE_LIMIT_VENTANA=15
RATE_LIMIT_MAX_REQUESTS=200

# 🔊 CONFIGURACIÓN DE AUDIO
AUDIO_ENABLED=true
SONIDOS_CARNAVAL=true
VOLUMEN_DEFAULT=0.7

# 🎨 EFECTOS VISUALES
CONFETI_ENABLED=true
PERSONAJES_FLOTANTES=true
MASCARAS_CARNAVAL=true
INSTRUMENTOS_MUSICALES=true
LLUVIA_PETALOS=true

# 🏛️ CONFIGURACIÓN DEL HÉRCULES
ESCUDO_HERCULES_ANIMADO=true
EFECTOS_LEONES=true

# 📊 CONFIGURACIÓN DE LOGS
LOG_LEVEL=info
LOG_FILE=logs/carnavalito.log

# 🔐 SEGURIDAD
SESSION_SECRET=carnaval_secreto_gaditano_2024
JWT_SECRET=hercules_cadiz_coac_jwt

# 🎵 VOCES GADITANAS
VOZ_JORGE_PITCH=-2.0
VOZ_JORGE_SPEED=0.8
VOZ_PABLO_PITCH=-1.0
VOZ_PABLO_SPEED=0.85

# 🎪 MENSAJES DEL SISTEMA
MENSAJE_BIENVENIDA="¡Ey, miarma! Soy Carnavalito, tu asistente más gaditano."
MENSAJE_ERROR="Tranquilo miarma, que esto lo arreglamos enseguida"
MENSAJE_DESCONEXION="¡Hasta luego, chiquillo! ¡Viva er Carnaval!"

# 🏆 CONFIGURACIÓN DEL COAC
MODALIDADES=chirigota,comparsa,cuarteto,coro
ESTILOS_MUSICALES=tanguillos,alegrías,pasodobles,cuplés,popurrí
TEATRO_FALLA_ENABLED=true

# 🎨 TEMAS Y COLORES
TEMA_CADIZ=true
COLOR_ORO=#FFD700
COLOR_AZUL_CADIZ=#1e3a8a
COLOR_ROJO_HERCULES=#dc2626
COLOR_VERDE_MAR=#059669

# 📱 CONFIGURACIÓN RESPONSIVE
MOBILE_OPTIMIZED=true
TABLET_OPTIMIZED=true
DESKTOP_OPTIMIZED=true

# 🚀 RENDIMIENTO
COMPRESSION_ENABLED=true
STATIC_CACHE_TIME=86400
API_CACHE_TIME=300

# 🔄 ACTUALIZACIONES AUTOMÁTICAS
AUTO_UPDATE_DICCIONARIO=true
AUTO_UPDATE_PERSONALIDADES=true
AUTO_UPDATE_EFECTOS=true
