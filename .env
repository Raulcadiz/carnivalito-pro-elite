# CARNIVALITO PRO ELITE - CONFIGURACIÓN SEGURA
# Las claves API se cifran automáticamente con rotación cada 24h

# Configuración del servidor
PORT=3001
NODE_ENV=development
HOST=localhost

# Base de datos
DB_PATH=./data/carnivalito.db
DB_BACKUP_PATH=./backups/

# Configuración de seguridad
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
API_KEY_ROTATION_HOURS=24

# APIs externas (se cifrarán automáticamente)
GROQ_API_KEY=your_groq_key_here
HUGGINGFACE_API_KEY=your_hf_key_here
GOOGLE_TTS_API_KEY=your_google_tts_key_here

# Configuración de administrador
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_hashed_password_here

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CHAT_RATE_LIMIT=20

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/carnivalito.log

# Cache
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# Funciones avanzadas
ENABLE_VOICE_SYNTHESIS=true
ENABLE_LEARNING_MODE=true
ENABLE_POETRY_AI=true
ENABLE_REAL_TIME_CHAT=true

# Configuración de síntesis de voz
VOICE_ENGINE=google
VOICE_LANGUAGE=es-ES
VOICE_SPEED=1.0
VOICE_PITCH=0.0

# Sistema de aprendizaje
LEARNING_THRESHOLD=0.7
AUTO_IMPROVE_RESPONSES=true
COLLECT_FEEDBACK=true

# CORS y seguridad
ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
